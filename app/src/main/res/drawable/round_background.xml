<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 填充的颜色 -->
    android:shape="oval">


    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <solid android:color="#fffefe"/>
    <corners android:radius="50dp"/>

    <!-- padding: Button 里面的文字与Button边界的间隔 -->

    <padding

        android:left="5dp"

        android:top="5dp"

        android:right="5dp"

        android:bottom="5dp"

        />
</shape>