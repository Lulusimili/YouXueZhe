<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#9903764a">
            <Button
                android:id="@+id/back_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_back"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="20sp"
                android:text="如花"
                />
            <Button
                android:id="@+id/button_private_letter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/private_letter"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image_head_portrait"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/add_head"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>
            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:soundEffectsEnabled="true"
                android:stepSize="1"
                android:layout_gravity="center"
                android:isIndicator="true"
                style="?android:attr/ratingBarStyleIndicator"
                android:progressTint="#f1d04d"
                />
            <TextView
                android:id="@+id/text_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:textSize="18dp"
                android:textColor="#000"
                tools:text="性别:"/>
            <TextView
                android:id="@+id/text_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:textSize="18dp"
                android:textColor="#000"
                tools:text="学校:"/>
            <TextView
                android:id="@+id/text_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:textSize="18dp"
                android:textColor="#000"
                tools:text="专业:"/>
            <TextView
                android:id="@+id/text_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:textSize="18dp"
                android:textColor="#000"
                tools:text="年级:"/>
            <TextView
                android:id="@+id/text_register_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:textSize="18dp"
                android:textColor="#000"
                tools:text="注册起始时间:"/>
            <TextView
                android:id="@+id/text_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:textSize="18dp"
                android:textColor="#000"
                android:text="简介:"/>
            <EditText
                android:id="@+id/edit_introduce"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="50dp"
                android:maxLines="5"
                android:background="#edeaea"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="发布的内容"
                android:textSize="18sp"
                android:textColor="#000"/>
           <android.support.v7.widget.RecyclerView
               android:id="@+id/publish_list"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
           </android.support.v7.widget.RecyclerView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="评价"
                android:textSize="18sp"
                android:textColor="#000"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/evaluate_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
