<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#9903764a">
        <Button
            android:id="@+id/back_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_back"
            android:layout_margin="5dp"
            />
    </RelativeLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="20dp"
                    tools:src="@drawable/test_image"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:text="标     题："/>
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/name"
                    android:layout_marginRight="40dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="20sp"
                    tools:text="课程"
                    android:textColor="#000"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp">
                <TextView
                    android:id="@+id/begin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:text="开始时间:"/>
                <TextView
                    android:id="@+id/begin_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/begin"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:background="@null"
                    android:textColor="@color/color5"
                    android:textSize="15sp"
                    tools:text="2018-04-01 00:00"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#eeecec"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/release"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="发布时间："
                    android:textColor="#000"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/release_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/release"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:background="@null"
                    android:textColor="@color/color5"
                    android:textSize="15sp"
                    tools:text="2018-04-01 00:00"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#eeecec"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/end"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="有效时间至："
                    android:textColor="#000"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/end"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:background="@null"
                    android:textColor="@color/color5"
                    android:textSize="15sp"
                    tools:text="2018-04-01 00:00"/>
            </RelativeLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:background="#a0a0a0"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:text="详情" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:background="#a0a0a0" />
            </LinearLayout>

            <TextView
                android:id="@+id/content_text"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/input"
                android:padding="25dp"
                android:textColor="#000"
                android:textSize="20sp"
                tools:text="内容:认识五线谱" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="个人展示"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a0a0a0"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.example.administrator.youxuezhe.ui.RoundImageView
                    android:id="@+id/picture_show"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:type="circle"
                    tools:src="@drawable/test_image"
                    android:layout_margin="5dp"/>
                <TextView
                    android:id="@+id/show_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#000"
                    tools:text="电子科大好声音杯吉他第二名\n有意联系微信" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a0a0a0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/button_private_letter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="私信发布者"
                    android:background="#f36ebc"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/button_join"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="申请加入"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:background="#f36ebc"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
