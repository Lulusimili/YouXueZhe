<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#34aef9">
        <TextView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="返回"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            />
        <!--
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:text="发布"/>
            -->
        <TextView
            android:id="@+id/button_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="发布"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_margin="5dp"/>
    </RelativeLayout>
    <com.example.administrator.youxuezhe.ui.RoundImageView
        android:id="@+id/img_about_play"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:type="round"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        tools:src="@drawable/test_image"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/need_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="15sp"
            android:text="标题："/>
        <EditText
            android:id="@+id/edt_need_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/need_title"
            android:maxLines="1"
            android:layout_marginRight="40dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:gravity="center"
            android:text="选择活动类型:"/>
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/trip_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="旅游"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"/>
            <RadioButton
                android:id="@+id/sport_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="运动"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"/>
            <RadioButton
                android:id="@+id/table_game_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="桌游"
                android:textSize="18sp"/>
        </RadioGroup>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/expect_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="15sp"
            android:text="期望参与人数:"/>
        <EditText
            android:id="@+id/edt_expect_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/expect_num"
            android:maxLines="1"
            android:layout_marginRight="40dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#eeecec"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/begin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="开始时间："
            android:textColor="#000"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/begin_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/begin"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="@null"
            android:textColor="@color/color5"
            android:textSize="15sp"
            tools:text="2018-04-01 00:00"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#eeecec"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="有效时间至："
            android:textColor="#000"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/end_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/end"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="@null"
            android:textColor="@color/color5"
            android:textSize="15sp"
            tools:text="2018-04-01 00:00"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:background="#0b0a0a" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:text="详情"
            android:textColor="#0b0a0a"
            android:textSize="18sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:background="#0b0a0a" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="@drawable/input">
        <EditText
            android:id="@+id/edt_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:hint="输入点什么吧..."
            android:background="@null"
            />

    </LinearLayout>

</LinearLayout>