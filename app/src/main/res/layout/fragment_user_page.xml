<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.youxuezhe.fragment.main_page_fragments.UserPageFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        >
        <TextView
            android:id="@+id/user_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="20dp"
            android:text="个人主页"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A9A9A9"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_commodity"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="6dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <com.example.administrator.youxuezhe.ui.RoundImageView
                        android:id="@+id/img_user_header"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/banner2"
                        app:type="circle" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:textColor="#000"
                            android:textSize="15sp"
                            tools:text="name:小明" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_user_grade"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="8dp"
                                android:textColor="#000"
                                android:textSize="15sp"
                                tools:text="年级:2016级" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/text_school"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textSize="15sp"
                            tools:text="school:电子科技大学" />
                    </LinearLayout>
                </LinearLayout>

                <com.example.administrator.youxuezhe.ui.CustomRatingBar
                    android:id="@+id/rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:starBackground="@drawable/star_null"
                    app:starClickable="false"
                    app:starDistance="3dp"
                    app:starDrawBackground="@drawable/star_full"
                    app:starHeight="18dp"
                    app:starWidth="18dp"
                    app:starsNum="5" />
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A9A9A9"/>
    <android.support.v7.widget.CardView
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/commitypublished"/>
            <Button
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:id="@+id/button_user_publish"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="我的发布"
                android:textSize="20sp"
                android:background="@null"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A9A9A9"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/get_pay"/>
            <Button
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:layout_marginLeft="20dp"
                android:id="@+id/button_pay_order_manage"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="我的订单"
                android:textSize="20sp"
                android:background="@null"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A9A9A9"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/interactive"
                />
            <Button
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:id="@+id/private_letter_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="私信"
                android:clickable="true"
                android:textSize="20sp"
                android:background="@null"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A9A9A9"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/group_fill"
                />
            <Button
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:id="@+id/my_friend"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="我的好友"
                android:clickable="true"
                android:textSize="20sp"
                android:background="@null"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A9A9A9"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/browse_fill"/>
            <Button
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:layout_marginLeft="20dp"
                android:id="@+id/button_receivables_order_manage"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="学生认证"
                android:textSize="20sp"
                android:background="@null"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A9A9A9"/>
    <android.support.v7.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/setup"/>
            <Button
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:layout_marginLeft="20dp"
                android:id="@+id/button_set_up"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="设置"
                android:textSize="20sp"
                android:background="@null"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
