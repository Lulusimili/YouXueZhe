<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.administrator.youxuezhe.fragment.main_page_fragments.page_about_play.AboutPlayFragment">
    <com.example.administrator.youxuezhe.ui.FlashView
        android:id="@+id/flash_view"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <RelativeLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <android.support.design.widget.TabLayout
            android:id="@+id/tab_about_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tabIndicatorHeight="1.5dp"
            app:tabGravity="fill"
            app:tabTextColor="#000"
            app:tabMode="fixed"
            app:tabSelectedTextColor="#ff59b1"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bebdbd"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/about_play_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v4.view.ViewPager>
</LinearLayout>
