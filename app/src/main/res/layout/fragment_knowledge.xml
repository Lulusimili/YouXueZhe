<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.youxuezhe.fragment.KnowledgeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#9903764a">
        <TextView
            android:id="@+id/my_order_title_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:text="游学者"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/point_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView_commodity"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Learning"
                    android:textSize="30sp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/music_button"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="#07e0bc"
                                android:text="音乐" />

                            <Button
                                android:id="@+id/programming"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="#07e0bc"
                                android:text="编程"
                                android:layout_alignParentTop="true"
                                android:layout_alignLeft="@+id/need_button"
                                android:layout_alignStart="@+id/need_button" />

                            <Button
                                android:id="@+id/PS"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="#07e0bc"
                                android:text="PS"
                                android:layout_alignParentTop="true"
                                android:layout_alignRight="@+id/need_button"
                                android:layout_alignEnd="@+id/need_button"
                                android:layout_marginRight="10dp"
                                android:layout_marginEnd="10dp" />

                            <Button
                                android:id="@+id/PE"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentTop="true"
                                android:layout_toEndOf="@+id/need_button"
                                android:layout_toRightOf="@+id/need_button"
                                android:background="#07e0bc"
                                android:text="体育" />

                            <Button
                                android:id="@+id/need_button"
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:layout_below="@id/music_button"
                                android:layout_centerInParent="true"
                                android:layout_margin="20dp"
                                android:background="#07e0bc"
                                android:text="needing" />
                        </RelativeLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>
