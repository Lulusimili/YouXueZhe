<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:layout_alignParentBottom="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/knowledge"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/tab_home_click"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="5dp"
                android:src="@drawable/knowledge"/>

            <TextView
                android:id="@+id/tab_home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="2dp"
                android:text="首页"
                android:textSize="10dp"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/seek_help"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/tab_bang"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="5dp"
                android:src="@drawable/seek_help"/>

            <TextView
                android:id="@+id/tab_bang_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="2dp"
                android:text="求助"
                android:textSize="10dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <FrameLayout
            android:id="@+id/about_play"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="5dp"
                android:src="@drawable/about_play"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="2dp"
                android:text="约玩"
                android:textSize="10dp"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/user_information"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="5dp"
                android:src="@drawable/user_information"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="2dp"
                android:text="我的"
                android:textSize="10dp"/>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        >

        <RelativeLayout
            android:layout_marginBottom="20dp"
            android:id="@+id/center_click"
            android:layout_width="wrap_content"
            android:layout_height="55dip"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/center_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:tint="#43a4ff"
                android:tintMode="src_in"
                android:src="@drawable/bg"/>
            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/add"/>
        </RelativeLayout>
    </FrameLayout>

</FrameLayout>